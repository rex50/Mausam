<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:cardCornerRadius="6dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:selectableItemBackground"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/wallpaper_img_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars"
                android:contentDescription="@string/preview_image" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/accent_to_transparent_overlay"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_img1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="6dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                app:cardElevation="8dp">
                <ImageView
                    android:id="@+id/wallpaper_img_1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/avatars"
                    android:contentDescription="@string/preview_image" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_img2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="6dp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/card_img1"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/wallpaper_img_2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/avatars"
                    android:contentDescription="@string/preview_image" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_img3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="6dp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/card_img2"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/wallpaper_img_3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/avatars"
                    android:layout_toEndOf="@+id/wallpaper_img_2"
                    android:contentDescription="@string/preview_image" />
            </com.google.android.material.card.MaterialCardView>

            <com.rex50.mausam.utils.custom_text_views.MediumTextView
                android:id="@+id/txt_collection_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Iranians, around the world, men and women and children."
                android:textSize="10sp"
                android:maxLines="3"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="15dp"
                android:layout_above="@+id/card_img1"/>

            <com.rex50.mausam.utils.custom_text_views.BoldTextView
                android:id="@+id/txt_collection_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Iranians"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_above="@+id/txt_collection_desc"/>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>