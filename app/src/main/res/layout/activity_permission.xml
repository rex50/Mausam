<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Activities.PermissionActivity"
    android:orientation="vertical"
    android:background="@android:color/white">

    <include layout="@layout/custom_header"/>

    <com.rex50.mausam.Utils.CustomTextViews.SemiBoldTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/permission_desc"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:textColor="@color/defaultDark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="0dp"
        android:background="@drawable/bg_general"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center">

            <com.rex50.mausam.Utils.CustomTextViews.BoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="22sp"
                android:layout_weight="1"
                android:textColor="@color/defaultDark"/>

            <Switch
                android:id="@+id/btn_ask_location_permission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:track="@drawable/track_selector"
                android:thumb="@drawable/thumb_selector"/>

        </LinearLayout>

        <com.rex50.mausam.Utils.CustomTextViews.SemiBoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/location_desc"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp"
            android:textSize="16sp"
            android:textColor="@color/defaultDark"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.rex50.mausam.Utils.CustomTextViews.BoldTextView
            android:id="@+id/btn_skip_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:textSize="22sp"
            android:textColor="@color/defaultDark"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:background="@drawable/bg_general"
            android:backgroundTint="@color/colorAccentDark"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

    </RelativeLayout>

</LinearLayout>